@using WebProject.Models;
@{
    ViewBag.Title = "Home Page";
}
@model List<Post>


<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-md-6">
            <h2>@post.Title</h2>
            <div>
                Posted on <i>@post.Date</i>
                @if (post.Author!=null)
                {
                    @:by  @post.Author.FullName <i>(@post.Author.UserName)</i>
                }
            </div>
            <p>
                @post.Body
            </p>
        </div>
    }
</div>

