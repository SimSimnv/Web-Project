@model IEnumerable<WebProject.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Posts</h2>

@if (User.Identity.IsAuthenticated)
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Author
        </th>
        <th>
            Post
        </th>
        <th>
            Comments
        </th>
        <th>
            Tags
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>

        <th>
            Actions
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @if (item.Author.FullName!=null)
            {
               @: @item.Author.FullName<br/><i>(@Html.ActionLink(item.Author.UserName, "UserDetails", "Home", new { UserName = item.Author.UserName },null))</i>
            
            }
            else
            {
                @: @Html.ActionLink(item.Author.UserName, "UserDetails", "Home", new { UserName = item.Author.UserName }, null)
            }
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @item.Comments.Count
        </td>
        <td>
            @foreach (var tag in item.Tags)
            {
                @: [@Html.ActionLink(tag.Name, "SearchTags", new { SearchString = tag.Name })]     
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td>
            @if (item.Author!=null && (item.Author.UserName == User.Identity.Name || User.IsInRole("Administrator")))
            {
              @: @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            }
            else if (User.IsInRole("Administrator"))
            {
                @: @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            }

           

            @if (item.Author != null && (item.Author.UserName == User.Identity.Name || User.IsInRole("Administrator")))
            {
                @: @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            }
            else if (User.IsInRole("Administrator"))
            {
                @: @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
            }

            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            
        </td>
       
    </tr>
}

</table>
